{
  "name": "af.github.com",
  "version": "0.0.0",
  "description": "Silly little personal website",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "format": "prettier --write lib pages components",
    "lint": "tsc && stylelint '{pages,components}/**/*.css'",
    "start": "next dev",
    "deploy": "yarn build && netlify deploy",
    "deploy-prod": "yarn build && netlify deploy --prod",
    "watch": "yarn start"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/af/af.github.com.git"
  },
  "author": "Aaron Franks (http://aaronfranks.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/af/af.github.com/issues"
  },
  "devDependencies": {
    "@types/d3": "6.7.0",
    "@types/react": "17.0.9",
    "gray-matter": "4.0.3",
    "husky": "4.2.5",
    "next": "12.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remark": "14.0.1",
    "remark-html": "15.0.0",
    "stylelint": "13.13.1",
    "stylelint-config-standard": "22.0.0",
    "typescript": "4.4.4"
  },
  "dependencies": {
    "d3": "5.15.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 110
  }
}
